{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"module": "commonjs",
		"outDir": "dist",
		"skipLibCheck": true,
		"target": "ES2019",
		"lib": ["dom", "dom.iterable", "esnext"],
		"moduleResolution": "node",
		"isolatedModules": false,
		"noEmit": false,
		"baseUrl": ".",
		"paths": {
			"~/*": ["src/*"]
		},
	},
	"include": ["next-env.d.ts", "src/**/*.ts", "src/**/*.tsx", "src/server/prisma.ts"],
	"exclude": ["node_modules"]
}